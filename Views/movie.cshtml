@using Umbraco.Cms.Web.Common.PublishedModels;
@using kim_umbraco.Models.ViewModels

@inherits UmbracoViewPage<MoviePageViewModel>

@{
    Layout = "root.cshtml";
}

<head>
    <link href="~/css/movie.css" rel="stylesheet" />
</head>

<div class="container movie-detail-container mt-5">
    <div class="row">
        <div class="col-md-4">
            <!-- Movie Poster -->
            <img src="@Model.Movie.Poster" onerror="this.src='/media/default-movie-poster.jpg'" class="poster-image-detail" alt="Static Movie Title Poster" />
        </div>
        <div class="col-md-8">
            <!-- Movie Details -->
            <h2 class="movie-title-detail">@Model.Movie.Title</h2>
            <p class="movie-year-detail">@Model.Movie.Year | <span class="text-warning"><i class="fas fa-star"></i> @Model.Movie.ImdbRating</span></p>
            <p class="movie-runtime-detail">@Model.Movie.Runtime</p>
            <p class="movie-plot-detail">@Model.Movie.Plot</p>

            <!-- Director and Actors -->
            <p class="movie-director-detail"><strong>Director:</strong> @Model.Movie.Director</p>
            <p class="movie-actors-detail"><strong>Actors:</strong> @Model.Movie.Actors</p>
        </div>
    </div>
</div>
